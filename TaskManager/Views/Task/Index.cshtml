@{
    ViewData["Title"] = "Tasks";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Task Manager</h1>
    </div>

    <div class="row mt-5">
        <div class="col-lg-12">
            @if (Model != null)
            {
                @foreach (var task in Model)
                {
                    <div class="card mb-3" id="task-@task.Id">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@task.Title</h5>
                            <p class="card-text">@task.Description</p>                            
                            <span class="badge bg-primary" style="width:fit-content;">@task.TimeStamp.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="card-footer d-flex justify-content-between">   
                            <div class="form-check">
                                <input class="form-check-input completed-task-checkbox" type="checkbox" id="completedCheckbox-@task.Id" 
                                    name="completedCheckbox-@task.Id" @(task.Completed ? "checked" : "") >
                                <label class="form-check-label" for="completedCheckbox-@task.Id">
                                    Completed
                                </label>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton-@task.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                    Actions
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@task.Id">
                                    <li><button class="dropdown-item delete-button" id="taskdel-@task.Id" type="button">Delete</button></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No tasks found.</p>
            }
        </div>
    </div>
</div>
